@model EditTicketModel;

@{
    ViewBag.Title = "Edit Ticket Management";
}

<div>
    <h2>Ticket Managment</h2>

    <h4 class="mt-5">Sell a ticket</h4>

    <div>
        <form method="post" asp-controller="Ticket" asp-action="EditTicket" class="w-25">
            <div class="my-2">
                <label for="name" class="form-label" asp-for="Name"></label>
                <input id="name" class="form-control" asp-for="Name" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>

            <div class="my-2">
                <label for="surname" class="form-label" asp-for="Surname"></label>
                <input id="surname" class="form-control" asp-for="Surname" />
                <span class="text-danger" asp-validation-for="Surname"></span>
            </div>

            <div class="my-2">
                <label for="hall" class="form-label" asp-for="Hall"></label>
                <select id="hall" class="form-select" asp-for="Hall">
                    <option value="">Open this select menu</option>
                    <option value="North Hall" selected=@(Model.Hall == "North Hall" ? true : false)>North Hall</option>
                    <option value="East Hall" selected=@(Model.Hall == "East Hall" ? true : false)>East Hall</option>
                    <option value="South Hall" selected=@(Model.Hall == "South Hall" ? true : false)>South Hall</option>
                </select>
                <span class="text-danger" asp-validation-for="Hall"></span>

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show mt-2" role="alert">
                        <span>@TempData["Error"]</span>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
            </div>

            @* <div class="d-flex align-items-center my-3">
                <input id="ticketType" type="checkbox" value="true" class="form-check-input" asp-for="IsReducedStr" />
                <label for="ticketType" class="form-label py-0 my-0 ps-2" asp-for="IsReduced"></label>
            </div> *@

            <div class="mt-3">
                <button class="btn btn-primary">Sell Ticket</button>
            </div>

            @if (TempData["ModelError"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mt-2" role="alert">
                    <span>@TempData["ModelError"]</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}